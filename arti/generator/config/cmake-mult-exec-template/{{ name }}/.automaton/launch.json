{
    "version": "1.0.0",

    "configurations": [
        {
            "name": "Launch",
            "cwd": "${workspace_folder}",
            "program": "$( dirname ${file} )/${file_stem} < $( dirname ${file} )/input.txt",
            "default": true,
            "depends": [ "Build" ]
        },
        {
            "name": "Copy",
            "cwd": "${workspace_folder}",
            "program": "cat ${file} | xclip -sel clip -i"
        }
    ]
}
